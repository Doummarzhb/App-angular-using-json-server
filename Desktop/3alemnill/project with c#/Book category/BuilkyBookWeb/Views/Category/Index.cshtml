 @model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@* <h1>Index  Category </h1> *@

@* @if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
} *@

<partial name ="_Notification"/>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
             <i class="bi bi-plus-circle"></i> &nbsp;   Create  New Category 
            </a>
        </div>
  
</div>

<table class=" table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                    Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        @* <a><i class="bi bi-pencil-square"></i>Edit</a> *@
                            <a asp-controller="Category" asp-action="edit" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Category" asp-action="DeletePOST" asp-action="DeletePOST" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>